#include <stdio.h>	// Standard Eingabe/Ausgabe Funktionen


int main(void)
{

	int stueckzahl = 0; // Initialisierung der Variable radius um in der folgenden Eingabe den Wert einlesen und speichern zu können. 

	float stueckpreis = 0.0; 

	char kaufdatum[12];

	printf("Eingabe Stueckzahl: "); 

	scanf_s(" %d", &stueckzahl); 

	printf(" \n");  

	printf("Eingabe Stueckpreis: ");

	scanf_s(" %f", &stueckpreis);

	printf(" \n");

	printf("Eingabe Kaufdatum (dd/mm/yyyy): ");

	scanf_s(" %s", kaufdatum);

	printf(" \n");

	printf(" Stueckzahl \t"); 

	printf(" Stueckpreis \t");

	printf(" Kaufdatum \t");

	printf(" \n"); 

	printf(" %d \t \t" , stueckzahl);

	printf(" EUR %2.2f \t  " , stueckpreis);

	printf(" %s  ", kaufdatum);

	printf(" \n");

	return 0; // Beendet die Funktion 
}
