#include <stdio.h>	// Standard Eingabe/Ausgabe Funktionen


int main(void)
{

	float radius = 0.0; // Initialisierung der Variable radius um in der folgenden Eingabe den Wert einlesen und speichern zu können. 

	printf("Radius in m eingeben: "); // Hier erscheint eine Beschreibung der Eingabe 

	scanf_s(" %f", &radius); // Der Wert der hier eingelesen wird ist vom Datentyp Float, die Funktion speichert den eingelesenen Wert in der hinterlegten Speicheradresse der Variable radius. 

	printf(" \n"); // Dient zur besseren Übersicht der Ausgaben in der Konsole 

	float ergebnisVolumen = 4.0f / 3.0f * 3.14159f * radius * radius * radius; // Formel zur Berechnung des Volumens einer Kugel mitsamt eingegebenem Radius vom Benutzer. 

	printf("Das Volumen einer Kugel mit Radius r=%0.2f m ist %0.2f m3", radius, ergebnisVolumen); // Textausgabe mit formatierten Radius und dem Ergebnis. 

	printf(" \n"); // Dient zur besseren Übersicht der Ausgaben in der Konsole 

	return 0; // Beendet die Funktion 
}
