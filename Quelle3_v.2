#include <stdio.h>	// Standard Eingabe/Ausgabe Funktionen


int main(void)
{

	

	int stueckzahl = 0; // initialisierung der Variable 

	float stueckpreis = 0.0;

	float MaxStueckpreis = 9999.99; 

	char kaufdatum[12];

	printf("Eingabe Stueckzahl: ");

	scanf_s(" %d", &stueckzahl);

	printf(" \n");

	printf("Eingabe Stueckpreis: ");

	scanf_s(" %f", &stueckpreis);

	printf(" \n");

	printf("Eingabe Kaufdatum (dd/mm/yyyy): ");

	scanf_s(" %12s", kaufdatum, 12); // Beim einlesen des Strings muss spezifisch angegeben werden wie viel Platz im Array benötigt wird 

	printf(" \n");

	printf("Stueckzahl \t Stueckpreis \t Kaufdatum \t ");

	printf(" \n");


	if (stueckpreis > 9999.99) // Dient zur kontrollierten Ausgabe des maximalen Preises. 
		{
			printf("%-d \t \t EUR %4.2f \t %-s \t ", stueckzahl, MaxStueckpreis, kaufdatum);
		
			printf(" \n");
		}

	else   
		{
			printf("%-d \t \t EUR %4.2f \t %-s \t ", stueckzahl, stueckpreis, kaufdatum);  

			printf(" \n");
		}


	return 0; // Beendet die Funktion 
}
